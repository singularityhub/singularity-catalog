BootStrap: docker
From: mambaorg/micromamba:1.4.4


%post
    # Create a micromamba environment (based won't work)
    micromamba create -y -n main

    # Example of installing bwa inside the environment
    micromamba install -q -y -n main -c conda-forge -c bioconda hmmer=3.3.2 python

    #cleanup
    rm -rf /opt/conda/pkgs/

%environment
    export PATH=/opt/conda/envs/main/bin:$PATH
    export LANG=C   # prevents perl for raising warnings
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8

