Bootstrap: docker
From: alpine:3.15

%labels
    Author Sequana Team
    Version v2.30.0

%post


    apk update
    apk add  unzip wget add ca-certificates && update-ca-certificates
    apk add --virtual=deps --update --no-cache zlib-dev xz-dev xz bzip2 bzip2-dev xz-libs --force-non-repository 
 
    rm -rf /var/lib/apt/list/*

    cd /usr/local/bin
    wget https://github.com/arq5x/bedtools2/releases/download/v2.30.0/bedtools.static.binary
    mv bedtools.static.binary bedtools
    chmod a+x bedtools


%environment
    export LC_ALL=C.UTF-8

%runscript
    exec bedtools "$@"


