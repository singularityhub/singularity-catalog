Bootstrap: docker
From: alpine:3.18


%files
    mosdepth_d4

%post
    apk update
    apk upgrade

    apk add bash 


    export PYTHONUNBUFFERED=1
    apk add --update --no-cache python3 && ln -sf python3 /usr/bin/python && ln -sf /usr/bin/python
    python3 -m ensurepip
    pip3 install --no-cache --upgrade pip setuptools

    cp mosdepth_d4 /bin/mosdepth




%runscript
     exec mosdepth "$@"

