Bootstrap: docker
From: statgen/docker-saige

%help
  A container for SAIGE.

%environment
  PATH=/usr/local/bin:$PATH

%post
  # post-setup script

  export LC_ALL=C.UTF-8
  export LANG=C.UTF-8
  echo 'export LC_ALL=C.UTF-8' >> $SINGULARITY_ENVIRONMENT
  echo 'export LANG=C.UTF-8' >> $SINGULARITY_ENVIRONMENT
