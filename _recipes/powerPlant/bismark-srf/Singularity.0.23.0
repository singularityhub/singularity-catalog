Bootstrap: docker
From: ubuntu:focal

%labels
Maintainer marty.hickman@plantandfood.co.nz
Version 0.23.0

%environment
  PATH=/Bismark-0.23.0:$PATH
  export PATH
  export LANG=en_NZ.UTF-8
  export LC_ALL=en_NZ.UTF-8
  export LANGUAGE=en_NZ.UTF-8

%post
  ## Download prerequisites
  export DEBIAN_FRONTEND="noninteractive"
  apt-get update
  apt-get -y install bowtie2 curl locales libfile-copy-recursive-perl samtools
  locale-gen en_NZ.UTF-8 

  curl -OL https://github.com/FelixKrueger/Bismark/archive/0.23.0.tar.gz

  tar -xvf 0.23.0.tar.gz
  
  ## Cleanup
  apt-get -y remove --purge curl
  apt-get -y clean all
  apt-get -y autoremove --purge
  rm -rf /0.23.0.tar.gz

%runscript
  exec bismark "$@"
