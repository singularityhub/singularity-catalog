Bootstrap: docker
From: fedora:27

%labels
Maintainer tejas.sevak@plantandfood.co.nz
Version 1.3.3

%post
  ## Download build prerequisites
  dnf -y install cmake clang gcc libstdc++ make

  curl -OL https://github.com/isovic/racon/releases/download/1.3.3/racon-v1.3.3.tar.gz

  tar -xvf racon-v1.3.3.tar.gz
  cd racon-v1.3.3
  mkdir build
  cd build/
  cmake -DCMAKE_BUILD_TYPE=Release ..
  make
  make install

  ## Cleanup
  dnf -y remove cmake clang gcc make
  dnf -y clean all
  rm -rf /racon*

%runscript
  exec racon "$@"
