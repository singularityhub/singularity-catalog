&& 	     cd TAMM   \
&& 	     mkdir build && cd build  \
&&              CMAKE_OPTIONS="-DCMAKE_INSTALL_PREFIX=/opt/install/exachem -DMODULES='CC' "  \
&&              CMAKE_OPTIONS="$CMAKE_OPTIONS -DDFT_CPU=ON " \
&& 	     CMAKE_OPTIONS="$CMAKE_OPTIONS -DBLIS_CONFIG=zen3 -DMARCH_FLAGS=-march=znver3"  \
