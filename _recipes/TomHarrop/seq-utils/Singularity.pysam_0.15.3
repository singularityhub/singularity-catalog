Bootstrap: docker
From: python:3.7.5-buster

%help
    pysam 0.15.3
    https://pysam.readthedocs.io

%labels
    MAINTAINER "Tom Harrop"
    VERSION "pysam 0.15.3"

%post
    # install dependencies
    apt-get update
    apt-get install -y \
        build-essential \
        libcrypto++-dev

    # install porechop 
    /usr/local/bin/pip3 install \
        pysam==0.15.3

%runscript
    exec /usr/local/bin/python3 "$@"
    