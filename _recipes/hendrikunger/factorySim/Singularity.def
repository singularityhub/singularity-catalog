Bootstrap: docker
From: nvcr.io/nvidia/tensorflow:23.04-tf2-py3

%files
requirements_factorySim.txt /workspace/factorySim/

%post
cd /workspace/factorySim

apt-get update && apt-get install -y --no-install-recommends \
build-essential \
libcairo2-dev \
pkg-config \
python3-dev \
ffmpeg \
bash-completion \
&& python3 -m pip install --upgrade pip \
&& python3 -m pip --no-cache-dir install -U -r requirements_factorySim.txt
 


%environment
    export PYTHONPATH=$HOME/factorySim/env:$HOME/gitRepo/factorySim/env

%runscript
cd $HOME/factorySim

%startscript
cd $HOME/factorySim

