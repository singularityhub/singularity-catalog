BootStrap: docker
From: ubuntu:16.04

%post
    apt-get update && \
    apt-get install -y wget \
    bzip2 \
    libcairo2-dev && \
    wget https://repo.continuum.io/miniconda/Miniconda3-4.4.10-Linux-x86_64.sh && \
    bash Miniconda3-4.4.10-Linux-x86_64.sh -b -p /conda && \
    rm -f Miniconda3-4.4.10-Linux-x86_64.sh && \
    conda install -y -c r r-base=3.4.3 \
    r=3.4.3 \
    pandoc=2.2.3.2 \
    r-reshape2=1.4.3 \
    r-rmarkdown=1.8 \
    r-ggplot2=2.2.1 \
    r-knitr=1.18 \
    r-xml=3.98_1.9

%test
    R --version

%environment
    export PATH=/conda/bin:${PATH}
    export LC_ALL="C.UTF-8"
    export LANG="C.UTF-8"
