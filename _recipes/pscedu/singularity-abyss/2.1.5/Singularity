%post
    apt-get update && apt-get install -y --no-install-recommends apt-utils
    apt-get update --fix-missing
    apt-get install -y abyss

####################################################################################
%apphelp abyss-fixmate
  abyss-fixmate --help

%apprun abyss-fixmate
  abyss-fixmate "$@"

####################################################################################
%apphelp abyss-pe
  abyss-pe --help

%apprun abyss-pe
  abyss-pe "$@"
