Bootstrap: docker
From: debian:buster

%labels
    MAINTAINER icaoberg
    EMAIL icaoberg@psc.edu
    SUPPORT help@psc.edu
    REPOSITORY http://github.com/pscedu/singularity-bedtools
    COPYRIGHT Copyright Â© 2021 Pittsburgh Supercomputing Center. All Rights Reserved. 
    VERSION 2.29.2

%post
    apt-get update && apt-get install -y --no-install-recommends apt-utils
    apt-get update --fix-missing
    apt-get install -y wget

####################################################################################
%appinstall bedtools
   wget -nc https://github.com/arq5x/bedtools2/releases/download/v2.29.2/bedtools.static.binary
   mv -v bedtools.static.binary /bin/bedtools
   chmod +x /bin/bedtools
   apt-get remove -y wget

%apphelp bedtools
    bedtools --help    

%apprun bedtools
    bedtools "$@"
