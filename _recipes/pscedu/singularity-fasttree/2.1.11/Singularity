%post
    apt update
    apt install -y wget libgomp1
    cd /usr/local/bin
    wget http://www.microbesonline.org/fasttree/FastTree
    wget http://www.microbesonline.org/fasttree/FastTreeMP
    wget http://www.microbesonline.org/fasttree/FastTreeDbl
    chmod +x FastTree
    chmod +x FastTreeMP
    chmod +x FastTreeDbl
