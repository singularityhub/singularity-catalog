%post
    apt update
    apt install -y wget
    wget -nc https://github.com/juan-leon/lowcharts/releases/download/v0.5.8/lowcharts_0.5.8_amd64.deb
    dpkg -i lowcharts_0.5.8_amd64.deb && rm -fv lowcharts_0.5.8_amd64.deb
    apt remove -y wget
    apt clean
