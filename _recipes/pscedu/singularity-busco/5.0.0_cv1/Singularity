%post
    apt-get update
    apt-get install -y wget
    wget -nc https://gitlab.com/ezlab/busco/-/archive/5.0.0/busco-5.0.0.tar.gz
    tar -xvf busco-5.0.0.tar.gz
    rm busco-5.0.0.tar.gz
    cd busco-5.0.0
    python setup.py install
    cd ..
    rm -rfv busco-5.0.0
