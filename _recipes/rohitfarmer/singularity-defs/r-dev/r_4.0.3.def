BootStrap: docker
From: ubuntu:bionic

%labels
    APPLICATION_NAME R 4.0.3 on Bionic
    AUTHOR_NAME Rohit Farmer
    AUTHOR_EMAIL rohit.farmer@gmail.com
    YEAR 2021

%help
    This container conatins:
        R 4.0.3 on Bionic

%environment
    # Set system locale
    PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin
    LANG=C.UTF-8 LC_ALL=C.UTF-8
    

%post
    # Change to tmp directory to download temporary files
    cd /tmp

    echo "Installing compilers and libraries"
    apt-get -qq -y update
    
    export DEBIAN_FRONTEND=noninteractive
    apt-get -qq install -y --no-install-recommends tzdata apt-utils software-properties-common 

    ln -fs /usr/share/zoneinfo/America/New_York /etc/localtime 
    dpkg-reconfigure --frontend noninteractive  tzdata
    
    add-apt-repository ppa:neovim-ppa/stable
    apt-get -qq -y update
    apt-get -qq -y --no-install-recommends upgrade 
    apt-get -qq -y update
    apt-get -qq install -y --no-install-recommends \
        autoconf \
        automake \
        build-essential \
        bzip2 \
        ca-certificates \
        cmake \
        curl \
        fuse \
        gcc \
        g++ \
        gfortran \
        git \
        gdal-bin \
        libgdal-dev \
        libtool \
        libjpeg-dev \
        libpng-dev \
        libtiff-dev \
        libatlas-base-dev \
        libxml2-dev \
        libcairo2-dev \
        libeigen3-dev \
        libcupti-dev \
        libpcre3-dev \
        libssl-dev \
        libcurl4-openssl-dev \
        libboost-dev \
        libboost-system-dev \
        libboost-thread-dev \
        libboost-serialization-dev \
        libboost-regex-dev \
        libgtk2.0-dev \
        libreadline-dev \
        libbz2-dev \
        liblzma-dev \
        libpcre++-dev \
        libpango1.0-dev \
        libopenblas-dev \
        liblapack-dev \
	libudunits2-dev \
	libv8-dev \
        libxt-dev \
        openjdk-8-jdk \
	proj-bin \
        python3-neovim \
        python3-dev \
        python3-pip \
        python3-setuptools \
        texlive \
        texlive-fonts-extra \
        texinfo \
        wget \
        xvfb \
        xauth \
        xfonts-base \
        zlib1g-dev \
        zip

    export LANG=C.UTF-8 LC_ALL=C.UTF-8

# Clean /tmp of any previous downloads
        rm -rf /tmp/*

# Install libgit2
        wget -q https://github.com/libgit2/libgit2/releases/download/v1.1.0/libgit2-1.1.0.tar.gz
        tar -zxf libgit2-1.1.0.tar.gz
        cd libgit2-1.1.0
        mkdir build && cd build
        cmake ..
        cmake --build . --target install
        cd /tmp

# Install PCRE2
        wget -q https://ftp.pcre.org/pub/pcre/pcre2-10.36.tar.gz
        tar -zxvf pcre2-10.36.tar.gz
        cd pcre2-10.36
        ./configure
        make
        make install
        cd /tmp

# Install R 4.0.3
        wget -q https://cran.r-project.org/src/base/R-4/R-4.0.3.tar.gz 
        tar -zxf R-4.0.3.tar.gz
        cd R-4.0.3
        ./configure
        make
        make install
        cd /tmp

# Cleanup
    echo "Cleaning"
    apt-get -qq clean
    rm -rf /var/lib/apt/lists/*
    rm -rf /tmp/*
