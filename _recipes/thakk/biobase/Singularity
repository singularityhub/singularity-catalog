# ######################## HISAT2 #################################

%apprun hisat2
   exec hisat2

%appinstall hisat2
   rm -rf hisat2-2.1.0
   wget http://ccb.jhu.edu/software/hisat2/dl/hisat2-2.1.0-source.zip
   unzip hisat2-2.1.0-source.zip
   cd hisat2-2.1.0
   make -j 8
   #find . -name '*py' | xargs -I{} cp {} /usr/local/bin/
   find . -executable -type f | grep -v tinythread | xargs -I{} cp {} /usr/local/bin/
   cd ..

